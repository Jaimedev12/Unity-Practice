            case "Chinga tu madre":
                print("La tuya, elige un buen nivel");
                break;
            case "menu":
                Terminal.ClearScreen();
                EnseñarMenu();
                break;
            default:
                print("Nivel inválido");
                break;
        }

        //print(input == "1");
    }   

    // Update is called once per frame
    void Update()
    {
        if (Input.GetMouseButtonDown(0))
